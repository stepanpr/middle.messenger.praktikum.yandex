{
    "compilerOptions": {
        "target": "es2022",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "moduleResolution": "nodenext"
    },
    "include": ["./src/**/*", "types.d.ts"], 
    "exclude": ["node_modules", "dist"]
}
