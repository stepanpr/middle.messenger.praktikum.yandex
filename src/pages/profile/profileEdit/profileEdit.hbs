<div class='profile-wrapper'>
    <div class='profile__avatar'>
        <img src={{userAvatar}} alt="Аватар"/>
        <span id='change-avatar-button' class='profile__avatar-change-button'>
            Поменять
            <br />
            аватар
        </span>
    </div>
    <form action='#' class='profile__form'>
		{{{emailProfileInput}}}
		{{{loginProfileInput}}}
		{{{firstNameProfileInput}}}
		{{{lastNameProfileInput}}}
		{{{displayNameProfileInput}}}
		{{{phoneProfileInput}}}
        <div class='profile__actions'>
			{{{button}}}
        </div>
    </form>

</div>
