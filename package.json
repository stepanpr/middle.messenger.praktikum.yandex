        "express": "^4.18.2",
        "parcel": "^2.8.3",
        "parcel-transformer-hbs": "^1.0.4",
        "path-browserify": "^1.0.1",
        "postcss-less": "^6.0.0",
        "prettier": "^2.8.8",
        "stylelint": "^15.6.0",
        "stylelint-config-recommended-less": "^1.0.4",
        "typescript": "^5.0.4",
        "uuid": "^9.0.0",
        "@babel/cli": "^7.12.1",
        "@babel/core": "^7.12.3",
        "@babel/preset-env": "^7.12.1",
