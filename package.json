{
    "name": "yandex-messenger",
    "version": "1.0.0",
    "description": "yandex-practicum/yandex-messenger",
    "browserslist": "> 0.5%, last 2 versions, not dead",
    "scripts": {
        "build": "parcel build ./index.html --no-cache",
        "start": "parcel --port 3000 ./index.html --open",
        "dev": "parcel --port 3001 ./index.html",
        "eslint": "node_modules/.bin/eslint --ext .ts",
        "eslint:fix": "node_modules/.bin/eslint --fix --ext .ts",
        "stylelint": "node_modules/.bin/stylelint **/*.less",
        "stylelint:fix": "node_modules/.bin/stylelint **/*.less --fix",
        "test": "./node_modules/.bin/mocha",
        "validate": "npm-run-all --parallel test eslint stylelint",
        "precommit": "npm run validate",
        "prepare": "husky install"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/stepanpr/middle.messenger.praktikum.yandex.git"
    },
